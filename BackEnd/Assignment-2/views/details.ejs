<!DOCTYPE html>
<html lang="en">
	<%- include("./partials/head.ejs") %>

	<body>
		<div class="card text-center m-auto mt-4 border-info" style="width: 28rem">
			<img
				src="https://www.techbooky.com/wp-content/uploads/2022/09/Blogging-Platforms.jpeg"
				class="card-img-top"
				alt="blog"
			/>
			<div class="card-body">
				<h5 class="card-title">Post <%= posts._id %></h5>
				<p class="card-text"><%= posts.message %></p>
				<form action="/posts/delete/<%= posts._id %>" method="post">
					<a href="/" class="btn btn-info">Back</a>
					<button
						type="button"
						class="btn btn-warning"
						data-bs-toggle="modal"
						data-bs-target="#exampleModal"
					>
						Edit
					</button>
					<button class="btn btn-danger">Delete</button>
				</form>
			</div>
			<div class="card-footer text-muted">
				Created <%= Math.floor((Date.now() - posts.updatedAt)/3600000)%> hours
				ago
			</div>
		</div>

		<!-- Edit Modal -->
		<%- include("./partials/editModal.ejs") %>

	</body>
</html>
